html 
    head 
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", rel="stylesheet")
    body 
        include header.pug       
            table(class="table table-dark")
                tr
                    th Name 
                    th Price 
                    th Details
                each product in products
                    tr
                        td #{product.name}
                        td #{product.price}
                        td #{product.detail}