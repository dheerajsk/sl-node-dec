html 
    head 
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", rel="stylesheet")
    body 
        include header.pug
            form(method="POST", action="/product/update")
                input(name="id", type="hidden", value=product._id)
                div.mb-3
                    label.form-label(for="name") Name
                    input.form-control(type="text" name="name" value=product.name)
                div.mb-3
                    label.form-label(for="details") Details
                    input.form-control(type="text" name="detail" value=product.detail)
                div.mb-3
                    label.form-label(for="price") Price
                    input.form-control(type="number" name="price" value=product.price)
                button(class="btn btn-primary" type="submit") Save Prodcut
            